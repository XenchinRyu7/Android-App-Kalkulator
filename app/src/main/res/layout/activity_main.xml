<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:text="MASUKAN DUA ANGKA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewJudul"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editAngkaPertama"
        android:hint="Masukan angka pertama"
        android:textSize="14sp"
        android:layout_below="@+id/txtViewJudul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editAngkaKedua"
        android:hint="Masukan angka kedua"
        android:textSize="14sp"
        android:layout_below="@+id/editAngkaPertama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="+"
        android:layout_width="80dp"
        android:id="@+id/btnTambah"
        android:layout_below="@+id/editAngkaKedua"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btnKurang"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnTambah"
        android:layout_alignBottom="@+id/btnTambah"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@+id/btnTambah"
        android:layout_toRightOf="@+id/btnTambah"
        android:text="-" />

    <Button
        android:id="@+id/btnKali"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnBagi"
        android:layout_alignBottom="@+id/btnBagi"
        android:layout_marginStart="-169dp"
        android:layout_marginLeft="-169dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/btnBagi"
        android:layout_toRightOf="@+id/btnBagi"
        android:text="x" />

    <Button
        android:text="/"
        android:layout_width="80dp"
        android:id="@+id/btnBagi"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnBersihkan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Bersihkan"
        android:layout_width="match_parent"
        android:id="@+id/btnBersihkan"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTambah"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="HASIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtView1"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/btnBersihkan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewHasil"
        android:textSize="36sp"
        android:layout_below="@+id/txtView1"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>